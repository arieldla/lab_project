# -----------------------------
# REQUIRED
# -----------------------------
aws_region   = "us-east-1"
name_prefix  = "dlagroup-serverless-webapp"
github_owner = "YOUR_GITHUB_OWNER"
github_repo  = "YOUR_GITHUB_REPO"
github_branch = "main"

# Create in Console: Developer Tools -> Connections -> GitHub
codestar_connection_arn = "arn:aws:codestar-connections:us-east-1:123456789012:connection/xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"

# -----------------------------
# OPTIONAL: Custom domain (CloudFront + Route53 + ACM)
# -----------------------------
enable_custom_domain = false
route53_zone_id      = "Z1234567890ABC"
site_domain_name     = "app.dlagroupinc.com"

# -----------------------------
# OPTIONAL: Cognito Hosted UI Domain
# -----------------------------
enable_cognito_hosted_ui_domain = false
cognito_domain_prefix = "dlagroup-auth-demo-12345"

# -----------------------------
# FRONTEND BUILD SETTINGS
# -----------------------------
frontend_app_dir          = "app"
frontend_build_command    = "npm ci && npm run build"
frontend_build_output_dir = "dist"
